    "test:provider": "mocha --require ts-node/register --reporter list -- 'secure-fabric-provider/test/web-socket/*.test.ts' --timeout 30000",
    "coverage:provider": "nyc npm run test:provider",
    "test:e2e": "mocha --require ts-node/register --reporter list -- 'test/**/*test.ts'"
  },
